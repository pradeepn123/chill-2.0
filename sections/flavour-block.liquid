{% for block in section.blocks %}
    {% style %}
        .flavour_text_title{
            font-size: {{ block.settings.flavour_title_font_size }}px;
        }
        .flavour_text_description{
            font-size: {{ block.settings.flavour_description_font_size }}px;
        }
        .flavour_button{
            font-size: {{ block.settings.flavour_button_font_size}}px;
        }
        @media (max-width: 767px){
            .flavour_text_title{
                font-size: {{ block.settings.flavour_title_font_size_mobile }}px;
            }
            .flavour_text_description{
                font-size: {{ block.settings.flavour_description_font_size_mobile }}px;
            }
            .flavour_button{
                font-size: {{ block.settings.flavour_button_font_size_mobile }}px;
            }
        }
        .flavour_block .block_img_wrapper_{{ block.id }} img:last-child{
            opacity: 0;
            visibility: hidden;
            trasition: all 2s ease-in-out;
        }
        .flavour_block .block_img_wrapper_{{ block.id }}:hover img:first-child{
            opacity: 0;
            visibility: hidden;
            trasition: all 2s ease-in-out;
        }
        .flavour_block .block_img_wrapper_{{ block.id }}:hover img:last-child{
            opacity: 1;
            visibility: visible;
            trasition: all 2s ease-in-out;
        }
    {% endstyle %}
{% endfor %}
<div class="flavour-block-section container">
    <div class="flavour_block_wrapper">
        <div class="flavour_block_container" {% if section.blocks.size > 1 %}style="padding-bottom: 80px !important;"{% endif %}>
            {% for block in section.blocks %}
                <div class="flavour_block" id="block-{{- block.settings.flavour_title | strip_html | replace: ' ', '' -}}" style="flex-direction: {{ block.settings.image_position }};">
                    {% comment %} <div class="block_img_wrapper_{{ block.id }}"> {% endcomment %}
                        <img class="flavour_image primary" src="{{ block.settings.flavour_image | img_url: 'master' }}" alt="flavour_image" width='100' height='100'>
                        {% comment %} <img class="flavour_image secondary" src="{{ block.settings.flavour_image_secondary | img_url: 'master' }}" alt="flavour_image" width='100' height='100' style=""> {% endcomment %}
                    {% comment %} </div> {% endcomment %}
                    <div class="flavour_text_block">
                        {% if block.settings.flavour_title != blank %}
                            <span class="flavour_text_title">{{ block.settings.flavour_title }}</span>
                        {% endif %}
                        {% if block.settings.flavour_description != blank %}
                            <p class="flavour_text_description">{{ block.settings.flavour_description }}</p>
                        {% endif %}
                        {% if block.settings.button_url != blank or block.settings.button_text != blank %}
                            <a href="{{ block.settings.button_url }}"><button class="flavour_button" style="background: {{ block.settings.button_color }};">{{ block.settings.button_text | upcase }}</button></a>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
        {% for block in section.blocks %}
            {% if block.settings.custom_slick_dot_image != blank %}
                <img class="customSlickDots image-{{ forloop.index }}" src="{{ block.settings.custom_slick_dot_image | img_url: 'master' }}" width='100' height='100' data-color="{{ block.settings.button_color }}" style="display: none;">
            {% endif %}
        {% endfor %}
    </div>
    {% comment %} <div class="progressBar">
        
    </div> {% endcomment %}
</div>


