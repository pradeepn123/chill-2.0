<div class="blog-category-item-wrap">
    {% if article.image %}
        <div class="article-image">
            <a href="{{ article.url }}">
                {%- render 'responsive-image', image: article.image, aspect_ratio: section.settings.crop_ratio, cover: true -%}
            </a>
        </div>
    {% endif %}
    <h3 class="title_wrap_before"><a href="{{ article.url }}">{{ article.title }}</a></h3>
    {% comment %} <div class="blog_content">
        <span class="author">{{ article.author }}</span>
        <span class="published_date">{{ article.published_at | date: format: 'month_date_year' }}</span>
        <h3 class="title_wrap_after"><a href="{{ article.url }}">{{ article.title }}</a></h3>
        <div class="article_description">{{ article.excerpt | truncate: 120, '...'}}</div>
    </div> {% endcomment %}
</div>